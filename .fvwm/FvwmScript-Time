WindowTitle {DateTime}
WindowSize  80 24
BackColor {#888888}
Font "xft:Sans:style=Bold:size=10" 

Init
 Begin
  Set $Time = (GetOutput {exec date "+%H:%M:%S"} 1 -1)
  Set $Date = (GetOutput {exec date "+%A %b %d"} 1 -1)

  ChangeTitle 1 $Time
  ChangeTitle 2 $Date
End

PeriodicTasks
 Begin 
  If (RemainderOfDiv (GetTime) 1)==0 Then
  Begin
   Set $Time = (GetOutput {exec date "+%H:%M:%S"} 1 -1)
   Set $Date = (GetOutput {exec date "+%A %b %d"} 1 -1)

   ChangeTitle 1 $Time
   ChangeTitle 2 $Date
  End
End

Widget 1
Property
 Position 0 0
 Size 80 12
 Font "xft:Sans:style=Bold:size=8"
 Type ItemDraw
 Flags NoReliefString
 Title {}
Main
 Case message of
  SingleClic :
  Begin
  End
End

