{
    "json.format.enable": true,
    "json.schemas": [],
    "vimlsp.debug": false,
    "vimlsp.trace.server": "off",
    "languageserver": {
        "cquery": {
            "command": "cquery",
            "args": [
                "--log-file=/tmp/cq.log"
            ],
            "filetypes": [
                "c",
                "cpp"
            ],
            "rootPatterns": [
                "compile_flag.txt",
                "compile_commands.json",
                ".vim/",
                ".git/",
                ".hg/"
            ],
            "initializationOptions": {
                "cacheDirectory": "/tmp/cquery"
            }
        },
        "golang": {
            "command": "gopls",
            "rootPatterns": [
                "go.mod",
                ".vim/",
                ".git/",
                ".hg/"
            ],
            "filetypes": [
                "go"
            ]
        }
    }
}
